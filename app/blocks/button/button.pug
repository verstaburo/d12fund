mixin button(newtag, loader)
  - var tag = 'a';
  if newtag
    - var tag = newtag;    
  +b(tag).button&attributes(attributes)
    block
    if loader
      +e.loader
        +e.IMG.loader-img(src="assets/images/loader.gif")

mixin button-arrow(newtag, loader)
  - var tag = 'a';
  if newtag
    - var tag = newtag;
  +b(tag).button_arrow&attributes(attributes)
    block
    +e.image
      +icon('arrow-right').icon
    if loader
      +e.loader
        +e.IMG.loader-img(src="assets/images/loader.gif")
