mixin popups()
  +b.popups&attributes(attributes)
    .popup-overlay
    block

mixin popup(title)
  +b.popup&attributes(attributes)
    .container
      if title
        .popup__title!= title
      .popup__content
        block

mixin popup-nocontent()
  +b.popup&attributes(attributes)
    block

mixin popup-notitle()
  +b.popup&attributes(attributes)
    .container
      .popup__content
        block
