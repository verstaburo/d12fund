mixin slider(pagination, buttons)
  +b.slider&attributes(attributes).swiper-container.js-slider
    .swiper-wrapper
      block
    if pagination
      +e.dots
        +e.dot
    if buttons
      +e.button._prev
        +icon('big-angle').icon
      +e.button._next
        +icon('big-angle').icon

mixin slide()
  .swiper-slide
    +e.slide&attributes(attributes)
      block
