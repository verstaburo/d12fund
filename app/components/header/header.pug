mixin header()
  +b.header&attributes(attributes)
    +e.logo
      +logo
    +e.NAV.navigation
      +link-list
    +e.account
      //- +notification.is-active
      +language
      +account

mixin header-short(formmenu, title, steps)
  - addClass = " "
  - if (!formmenu) { addClass="_transparent" }
  +b.header_short(class=addClass)&attributes(attributes)
    +e.logo
      +logo
    +e.NAV.navigation
      if formmenu
        +link-list-steps(steps)
      if title
        +e.title Sign In
    +e.account
      +language
