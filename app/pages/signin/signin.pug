extends ../../layouts/signin

block head
  - var pageTitle = 'D12 Fund - Sign In'

block header
  - title = true

block content
  +b.MAIN.signin
    .container
      +form.__form#form-signin
        +e.info-message
          +e.error 
          +e.success
            +icon('check').success-icon
            +e.success-text Signed In
        +e.LABEL.row
          +e.label
            +e.SPAN.star *
            | Your email
          +e.wrapper
            +input(type="text" name="email" placeholder="Type your email" data-type="email" required)
            +e.switcher_info
              +icon('alert').icon_alert
        +e.LABEL.row
            +e.label
              +e.SPAN.star *
              | Your password
            +e.wrapper
              +input(type="password" name="password" placeholder="Type your password" required)
              +e.switcher_info
                +icon('alert').icon_alert
        +e.row_columns
          +e.col_left
            +link._white.__label(href="#") forgot password?
          +e.col_right
            +e.label or sign in with
            +socials
        +e.row_centered._button
          +button-arrow('button', 'true')(type="submit").__button.js-validate Sign In
        +e.row_centered
          +e.label_centered
            | Donâ€™t have an account?
            +link(href="signup.html") sign up here
